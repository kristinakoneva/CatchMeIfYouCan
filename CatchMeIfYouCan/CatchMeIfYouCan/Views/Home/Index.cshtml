@{
    ViewBag.Title = "Home Page";
}
<style>
    .mySlides {
        max-width: 100%;
        max-height: 100%;
        width: 1920px;
        height: 1210px;
    }

    .body-content {
        width: 100%;
    }
    .row-boxes{
        display: flex;
        margin: 50px;
        justify-content: center;
    }
    .box {
        display: flex;
        height: 500px;
        width: 350px;
        border: 5px solid black;
        border-radius: 50px;
        margin: 10px auto;
        justify-content: center;
        flex-direction: column;
        
    }
    .box-photo{
        width: 60%;
        height: 50%;
        margin-top: 50px;
        margin-right: auto;
        margin-left: auto;
    }
    button {
        margin: 40px;
        padding: 15px;
        border-radius: 10px;
        background: black;
        font-size: 18px;
        color: white;
        font-weight: bold;
    }
    button:hover {
        background-color: dimgrey;
        color: white;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
        cursor: pointer;
        border-radius: 10px;
        border-color: dimgray;
    }
</style>

<div class="jumbotron">
    <h1 style="text-align: center">CATCH ME IF YOU CAN</h1>
    <h2 style="text-align: center">Running Club</h2>
</div>
 
<div class="slide-show">
    <img class="mySlides" src="~/Content/Photos/slide-show-1.jpg" />
    <img class="mySlides" src="~/Content/Photos/slide-show-2.jpg" />
    <img class="mySlides" src="~/Content/Photos/slide-show-3.jpg" />
</div>

<div class="row-boxes">
    <div class="box">
        <img class="box-photo" src="~/Content/Photos/index-running-sessions.png" />
        <button id="btn-running-sessions">Running Sessions</button>
    </div>
    <div class="box">
        <img class="box-photo" src="~/Content/Photos/index-new-session.png" />
        <button id="btn-new-session">New Session</button>
    </div>
    <div class="box">
        <img class="box-photo" src="~/Content/Photos/index-leaderboard.png" />
        <button id="btn-leaderboard">Leaderboard</button>
    </div>
</div>


@section Scripts{
    <script>
        var slideIndex = 0;
        carousel();

        function carousel() {
            var i;
            var x = document.getElementsByClassName("mySlides");
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            slideIndex++;
            if (slideIndex > x.length) { slideIndex = 1 }
            x[slideIndex - 1].style.display = "block";
            setTimeout(carousel, 2000); // Change image every 2 seconds
        }

        $("#btn-running-sessions").on("click", function () {
    
            $.ajax({
                url: "/Sessions/Index",
                method: "POST",
                success: function () {
                    window.location = "/Sessions/Index";
                }
            });

        });
        $("#btn-new-session").on("click", function () {

            $.ajax({
                url: "/Sessions/Create",
                method: "GET",
                success: function () {
                    window.location = "/Sessions/Create";
                }
            });

        });
        $("#btn-leaderboard").on("click", function () {

            $.ajax({
                url: "/Sessions/Leaderboard",
                method: "POST",
                success: function () {
                    window.location = "/Sessions/Leaderboard";
                }
            });

        });
    </script>
}

